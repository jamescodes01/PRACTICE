#include <iostream>
using namespace std;

int main()
{
    char c;
    cout << "Enter a alphabet :-";
    cin >> c;

    switch (c)
    {
    case 'a':
        cout << "it's a vovel";
        break;

    case 'e':
        cout << "it's a vovel";
        break;

    case 'i':
        cout << "it's a vovel";
        break;
    case 'o':
        cout << "it's a vovel";
        break;

    case 'u':
        cout << "it's a vovel";
        break;

    case 'A':
        cout << "it's a vovel";
        break;
    case 'E':
        cout << "it's a vovel";
        break;

    case 'I':
        cout << "it's a vovel";
        break;

    case 'O':
        cout << "it's a vovel";
        break;
    case 'U':
        cout << "it's a vovel";


        break;

    default:
        string phrase = "it is a consonent.";
        string accent = "en-us"; // For Hindi accent
        int speed = 100;      // Adjust the speed as needed
        string command = "espeak -s " + to_string(speed) + " -v " + accent + " \"" + phrase + "\"";
        const char *charCommand = command.c_str();
        system(charCommand);

        break;
    }

    return 0;
}
